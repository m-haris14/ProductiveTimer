{
  "name": "my-app",
  "private": true,
  "version": "0.0.0",
  "description": "A productive timer application for tracking work and breaks.",
  "author": {
    "name": "MernHosting",
    "email": "support@mernhosting.com"
  },
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm run client\" \"wait-on http://localhost:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .\"",
    "electron:build": "npm run build && electron-builder",
    "server": "cd server && nodemon server.js",
    "client": "vite --host",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "service:restart": "sudo systemctl restart productive-timer.service",
    "service:status": "sudo systemctl status productive-timer.service"
  },
  "build": {
    "appId": "com.productivetimer.app",
    "productName": "Productive Timer Desktop",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "axios": "^1.13.2",
    "chart.js": "^4.5.1",
    "react": "^19.1.0",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.10.1",
    "socket.io-client": "^4.8.3",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "mongoose": "^9.0.2",
    "multer": "^2.0.2",
    "node-zklib": "^1.3.0",
    "nodemon": "^3.1.11",
    "path": "^0.12.7",
    "socket.io": "^4.8.3",
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "sass-embedded": "^1.89.2",
    "vite": "^7.1.11",
    "wait-on": "^9.0.3"
  }
}